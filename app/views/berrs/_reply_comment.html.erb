<%= form_for comment, :as => :berr, :url => berrs_path do |f| %>
	<% if comment.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @comment.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <input name="berr[parent_id]" type="hidden" value="<%= comment.parent_id %>" />
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :text %>
    <%= f.text_area :text %>
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>